<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<GridPane fx:controller="sample.Controller"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10">

    <TextArea fx:id="textArea" prefHeight="100" prefWidth="200" GridPane.rowIndex="0" GridPane.columnIndex="0" GridPane.columnSpan="2" editable="false" />
    <TextField fx:id="inputField" onKeyReleased="#textFieldUpdated" prefWidth="200" GridPane.rowIndex="1" GridPane.columnIndex="0" />
    <Button text="Send" onAction="#btnClick" fx:id="sendBtn" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
</GridPane>